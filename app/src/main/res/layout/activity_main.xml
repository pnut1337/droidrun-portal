<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingHorizontal="20dp"
        android:paddingTop="34dp"
        android:paddingBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header with Logo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="35dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginEnd="0dp"
                    android:src="@drawable/logo" />


            </LinearLayout>

            <!-- Accessibility Service Status Banner -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/accessibility_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/alert_error_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/triangle_alert"
                        app:tint="@color/text_white"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/accessibility_banner_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Accessibility Service Not Enabled"
                        android:textColor="@color/text_white"
                        android:textSize="12sp"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/enable_accessibility_button"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Enable Now"
                        android:textSize="12sp"
                        android:textColor="@color/text_white"
                        app:backgroundTint="@color/alert_error_button"
                        app:cornerRadius="2dp"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="0dp"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Accessibility Service Status (Enabled state - hidden by default) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/accessibility_status_enabled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/background_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <View
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/circle_check"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Accessibility Service"
                        android:textColor="@color/text_white"
                        android:textSize="14sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/fetch_button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Test Fetching"
                        android:textSize="12sp"
                        android:textColor="@color/background_primary"
                        app:backgroundTint="@color/status_success"
                        app:cornerRadius="2dp"
                        app:icon="@drawable/refresh_cw"
                        app:iconTint="@color/background_primary"
                        app:iconGravity="textStart"
                        app:iconSize="15dp"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Controls Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/background_primary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="15dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/settings"
                            app:tint="@color/text_white"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="2dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Controls"
                            android:textSize="25sp"
                            android:textStyle="normal"
                            android:textColor="@color/text_white" />
                    </LinearLayout>

                    <!-- Overlay Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="0dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Overlay"
                            android:textColor="@color/text_white"
                            android:textSize="16sp" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/toggle_overlay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />

                    </LinearLayout>

                    <!-- Overlay Offset Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Overlay Offset"
                        android:textColor="@color/text_white"
                        android:textSize="16sp"
                        android:layout_marginBottom="0dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@color/background_secondary"
                        android:padding="0dp"
                        android:layout_marginBottom="12dp">

                        <SeekBar
                            android:id="@+id/offset_slider"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="512"
                            android:min="0"
                            android:layout_marginEnd="16dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/offset_value_input_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            app:boxStrokeColor="@color/stroke_gray"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/offset_value_display"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:inputType="numberSigned"
                                android:text="0"
                                android:textColor="@color/text_white"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:background="@color/background_input" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@color/background_tertiary"
                        android:padding="12dp"
                        android:layout_marginBottom="20dp"
                        >
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/info"
                            app:tint="@color/text_hint"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tip: Vision mode works even with overlay off"
                            android:textColor="@color/text_hint"
                            android:textSize="12sp" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Socket Server Port"
                        android:textColor="@color/text_white"
                        android:textSize="16sp"
                         />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="0dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/socket_port_input_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            app:boxStrokeColor="@color/background_input"
                            app:hintTextColor="@color/text_gray"
                            android:textColorHint="@color/text_gray"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/socket_port_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12dp"
                                android:inputType="number"
                                android:textSize="16sp"
                                android:textColor="@color/text_white"
                                android:background="@color/background_input"
                                android:text="8080"

                       />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>



            </com.google.android.material.card.MaterialCardView>

            <!-- Connection Details Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/background_primary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"

               >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginTop="2dp"
                            android:src="@drawable/unplug"
                            app:tint="@color/text_white"
                            android:layout_marginEnd="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Connection Details"
                            android:textSize="25sp"
                            android:textStyle="normal"
                            android:textColor="@color/text_white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Socket Status:"
                            android:textColor="@color/text_gray"
                            android:textSize="14sp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/socket_server_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Service not available"
                            android:textColor="@color/status_error"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ADB Forward Command"
                        android:textColor="@color/text_white"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:id="@+id/adb_forward_command"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="adb forward tcp:8080 tcp:8080"
                        android:textColor="@color/text_gray_light"
                        android:textSize="13sp"
                        android:fontFamily="monospace"
                        android:background="@color/background_code"
                        android:padding="12dp"
                        android:layout_marginBottom="16dp" />

                    <!-- Collapsible Endpoints Section -->
                    <LinearLayout
                        android:id="@+id/endpoints_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:paddingVertical="8dp">
                        <ImageView
                            android:id="@+id/endpoints_arrow"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/chevron_right"
                            app:tint="@color/text_white"
                            android:rotation="0" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Endpoints"
                            android:textColor="@color/text_white"
                            android:textSize="16sp"
                            android:textStyle="bold"

                            android:gravity="center_vertical" />


                    </LinearLayout>

                    <!-- Endpoints Content (Collapsible) -->
                    <LinearLayout
                        android:id="@+id/endpoints_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginTop="8dp"
                        android:background="@color/background_code"
                        android:padding="16dp">

                        <!-- GET Endpoints -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GET"
                            android:textColor="@color/http_get"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="monospace"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="/a11y_tree"
                            android:textColor="@color/text_gray_light"
                            android:textSize="13sp"
                            android:fontFamily="monospace"
                            android:paddingStart="16dp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="/phone_state"
                            android:textColor="@color/text_gray_light"
                            android:textSize="13sp"
                            android:fontFamily="monospace"
                            android:paddingStart="16dp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="/state"
                            android:textColor="@color/text_gray_light"
                            android:textSize="13sp"
                            android:fontFamily="monospace"
                            android:paddingStart="16dp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="/ping"
                            android:textColor="@color/text_gray_light"
                            android:textSize="13sp"
                            android:fontFamily="monospace"
                            android:paddingStart="16dp"
                            android:layout_marginBottom="16dp" />

                        <!-- POST Endpoints -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="POST"
                            android:textColor="@color/http_post"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="monospace"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="/keyboard/input"
                            android:textColor="@color/text_gray_light"
                            android:textSize="13sp"
                            android:fontFamily="monospace"
                            android:paddingStart="16dp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="/keyboard/clear"
                            android:textColor="@color/text_gray_light"
                            android:textSize="13sp"
                            android:fontFamily="monospace"
                            android:paddingStart="16dp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="/keyboard/key"
                            android:textColor="@color/text_gray_light"
                            android:textSize="13sp"
                            android:fontFamily="monospace"
                            android:paddingStart="16dp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="/overlay_offset"
                            android:textColor="@color/text_gray_light"
                            android:textSize="13sp"
                            android:fontFamily="monospace"
                            android:paddingStart="16dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Footer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="16dp">

                <TextView
                    android:id="@+id/version_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="v0.4.0"
                    android:textColor="@color/text_gray_dark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/logs_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logs"
                    android:textColor="@color/text_white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>